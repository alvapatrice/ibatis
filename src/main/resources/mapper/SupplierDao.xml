<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.saneza.api.dao.SupplierDao" >

     <sql id="pagination">
        <if test="offset!=null">
            LIMIT #{offset}
            <if test="count!=null">
                ,#{count}
            </if>
        </if>
    </sql>

    <sql id="filter">
        <if test="supplierId!=null">
            AND Supplier_Id=#{supplierId}
        </if>
        <if test="locationId!=null">
            AND location_Id=#{locationId}
        </if>
        <if test="streetName!=null">
            AND street_Name=#{streetName}
        </if>
        <if test="phoneNumber!=null">
            AND phone_Number=#{phoneNumber}
        </if>
        <if test="userName!=null">
            AND user_Name=#{userName}
        </if>
        <if test="firstName!=null">
            AND first_Name=#{firstName}
        </if>
        <if test="lastName!=null">
            AND last_Name=#{lastName}
        </if>
        <if test="email!=null">
            AND email=#{email}
        </if>
    </sql>

    <select id="getSuppliers" parameterType="map" resultType="com.saneza.api.model.Supplier">
        SELECT * FROM Supplier WHERE 1=1
        <include refid="filter"/>
    </select>
    <select id="getSupplier" parameterType="map" resultType="com.saneza.api.model.Supplier">
        SELECT * FROM Supplier WHERE 1=1
        <include refid="filter"/>
    </select>
    <select id="countAll" resultType="int" parameterType="map">
        SELECT COUNT(*) FROM Supplier WHERE 1=1
        <include refid="filter"/>
    </select>
    <insert id="createSupplier" parameterType="map">

        INSERT INTO Supplier(Supplier_id,location_id,street_name,phone_number,username,first_name,last_name,
         birthday,sex,password,email,profile_image,credit,create_time,update_time)
        VALUES
        (#{supplierId},#{locationId},#{streetName},#{phoneNumber},#{userName},#{firstName},
        #{lastName},#{birthDay},#{sex},#{password},#{email},#{profileImage},#{credit},#{createTime},
        #{updateTime})
    </insert>

</mapper>