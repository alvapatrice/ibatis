<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.saneza.api.dao.ProductDao" >



    <sql id="pagination">
        <if test="offset!=null">
            LIMIT #{offset}
            <if test="count!=null">
                ,#{count}
            </if>
        </if>
    </sql>


    <sql id="product_filter">
         <if test="productId!=null">
       AND PRODUCT_ID=#{productId}
         </if>
        <if test="productName!=null">
            AND PRODUCT_NAME=#{productName}
        </if>
        <if test="shopId!=null">
            AND SHOP_ID=#{shopId}
        </if>
        <if test="category!=null">
            AND CATEGORY=#{category}
        </if>
        <if test="brand!=null">
            AND BRAND=#{brand}
        </if>

        <if test="stock!=null">
            AND STOCK=#{stock}
        </if>

    </sql>




    <select id="findAllProduct" resultType="com.saneza.api.model.Product" parameterType="map">
        SELECT * FROM Products WHERE 1=1
        <include refid="product_filter"/>
        <!--ORDER BY PRODUCT_ID DESC-->
    </select>

    <select id="findProduct" resultType="com.saneza.api.model.Product" parameterType="map">
        SELECT * FROM Products WHERE 1=1
        <include refid="product_filter"/>
    </select>

    <select id="count" resultType="int" parameterType="map">
        SELECT COUNT(*) FROM PRODUCTS WHERE 1=1
        <include refid="product_filter"/>
    </select>

    <insert id="createProduct" parameterType="map">
        INSERT INTO PRODUCTs
        (product_id,shop_id,product_name,category,brand,image,price,special_price,stock,status)
        VALUES
        (#{productId},#{shopId},#{productName},#{category},#{brand},#{image},#{price},#{specialPrice},#{stock},#{status})

    </insert>


</mapper>